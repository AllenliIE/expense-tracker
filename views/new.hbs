<div class="container">
  <div class="row mt-3">
    <div class="col-md-5 m-auto">
      <div class="card-body">
        <div class="row mb-3 ">
          <label class="col-3 fs-6">* 必填欄位</label>
          <label class="col-9 fs-5">請輸入你的支出</label>
        </div>
        <form action="/records/new" method="POST">
          <div class="row align-items-center mb-5">
            <label for="name" class="col-auto" required>名稱* ：</label>
            <input type="text" name="name" id="name" placeholder="name" style="width: 180px; height: 30px;">
          </div>
          <div class="row align-items-center mb-5">
            <label for="date" class="col-auto" required>日期* ：</label>
            <input type="date" name="date" id="date" style="width: 180px; height: 30px;">
          </div>
          <div class="row align-items-center mb-5">
            <label for="category" class="col-auto" required>類別* ：</label>
            <select name=" category" id="category" class="col-auto" style="width: 180px; height: 30px;" required>
              <option value="0" selected disabled>Select</option>
              <option value="1">家居物業</option>
              <option value="2">交通出行</option>
              <option value="3">休閒娛樂</option>
              <option value="4">餐飲食品</option>
              <option value="5">其他</option>
            </select>
          </div>
          <div class="row align-items-center mb-5">
            <label for="amount" class="col-auto" required>金額* ：</label>
            <input type="number" name="amount" id="amount" min="0" style="width: 180px; height: 30px;">
          </div>
          <div class="col-6 mx-auto">
            <button type="submit" class="btn btn-light">新增支出</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>