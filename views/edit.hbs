<div class="container">
  <div class="row mt-3">
    <div class="col-md-5 m-auto">
      <div class="card-body">
        <div class="row mb-3 ">
          <label class="col-3 fs-6">* 必填欄位</label>
          <label class="col-9 fs-5">請修改你的支出</label>
        </div>
        <form action="/records/{{record._id}}/edit?_method=PUT" method="POST">
          <div class="row align-items-center mb-5">
            <label for="name" class="col-auto" required>名稱* ：</label>
            <input type="text" name="name" id="name" placeholder="name" style="width: 180px; height: 30px;"
              value="{{record.name}}">
          </div>
          <div class="row align-items-center mb-5">
            <label for="date" class="col-auto" required>日期* ：</label>
            <input type="date" name="date" id="recordDate" style="width: 180px; height: 30px;" value="{{record.date}}">
          </div>
          <div class="row align-items-center mb-5">
            <label for="category" class="col-auto" required>類別* ：</label>
            <select name="categoryId" id="category" class="col-auto" style="width: 180px; height: 30px;" required>
              <option value={{record.categoryId._id}} selected>{{record.categoryId.name}}</option>
              {{#each category}}
              <option value="{{this._id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="row align-items-center mb-5">
            <label for="amount" class="col-auto" required>金額* ：</label>
            <input type="number" name="amount" id="amount" min="0" style="width: 180px; height: 30px;"
              value="{{record.amount}}">
          </div>
          <div class=" col-6 mx-auto">
            <button type="submit" class="btn btn-light">送出</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>